<div class="text-center">
    <h1> People </h1>
</div>


<div class="row" style="margin-bottom:30px">
    <button id="btnAddPerson" class="btn btn-primary">Add Person</button>
</div>

<div class="row">
    <table id="tbl-ppl" class="table table-bordered table-ho table-striped">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
        </tr>
    </table>

</div>

<div id="modal-ppl" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">New Person</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input id="first" class="form-control" name="firstName" placeholder="First Name" type="text">
                    </div>
                    <div class="form-group">
                        <input id="last" class="form-control" name="lastName" placeholder="Last Name" type="text">
                    </div>
                    <div class="modal-footer">
                        <input id="age" class="form-control" name="Age" placeholder="Age" type="text">

                    </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->


@section scripts {
    <script src ="/js/index.js"></script>
}
